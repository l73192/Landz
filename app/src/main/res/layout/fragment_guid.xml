<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/splash_a"
    android:layout_height="match_parent"
    tools:context="com.landz.landz.ui.welcome.fragment.GuidFragment">

    <!-- 文字 -->
    <LinearLayout
        android:id="@+id/ll_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:text="@string/splash_tip1"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:text="@string/splash_tip01"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_tiyan"
        android:text="开始体验"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_tiyan_selector"
        android:layout_above="@id/ll_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
