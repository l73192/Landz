<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_online_twopic"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/defult_twopic"/>
        <TextView
            android:id="@+id/tv_online_jianjie"
            android:layout_alignTop="@+id/img_online_twopic"
            android:layout_toRightOf="@+id/img_online_twopic"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_online_diduan"
            android:layout_below="@+id/tv_online_jianjie"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/img_online_twopic"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="@dimen/text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_online_jushi"
            android:layout_below="@+id/tv_online_diduan"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_online_twopic"
            android:singleLine="true"
            android:textColor="@color/huise"
            android:textSize="@dimen/text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_bottom_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_online_twopic"
            android:layout_toRightOf="@+id/img_online_twopic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_detail_tese1"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tese_red"
                android:textColor="#4594cd"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:textSize="10sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_detail_tese2"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tese_red"
                android:textColor="#d7b259"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:textSize="10sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_detail_tese3"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tese_red"
                android:textColor="#9c5831"
                android:padding="5dp"
                android:textSize="10sp"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_online_zongjia"
            android:textSize="@dimen/text_14"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_online_jianjie"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>